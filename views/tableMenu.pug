- env = process.env;

doctype html 
html(lang='ko')

head 
    title #{pageTitle}

body
    div
        each i in arrayResult
            article
                //이름
                p #{i}
                //가격
                p #{result[`${i}`]}
                //사진
                img
                
                //버튼에 /stores/:storeID/tables/:tableNumber/menus/:menuName/ post 요청 보낼거임
                form(action=env.URL+`/stores/${storeID}/tables/${tableNumber}/menus/${i}` method="POST")
                    p
                        input(placeholder="수량 입력", name="count", type="number", required)
                    p
                        input(type="submit", value="주문하기")
