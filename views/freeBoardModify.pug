- env = process.env;

include Layout/boardMenuBar.pug

body
    form(action=env.URL+'/stores/'+storeID+'/freeBoards/posts/'+postID+'/modify' method="POST")
        p
            input(placeholder="제목", name="title", value=result.title, type="text", required)
        p
            input(placeholder="내용", name="contents", value=result.contents.contents, type="text", required)
        p
            input(type="submit", value="수정")